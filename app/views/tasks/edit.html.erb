<div class="container">
  <h2 align="center">Edit task</h2>
  <div class="form-group">
  <%= simple_form_for @task, remote: true do |f| %>
    <%= f.input :name %>
    <%= f.input :descripion, input_html:{ rows: "10"}%>
    <%= f.button :submit, class: 'btn btn-success'%>
